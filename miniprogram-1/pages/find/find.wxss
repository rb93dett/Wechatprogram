/* pages/find/find.wxss */

page{
  background-color: #f5f5f5;
}

/* 标签题目 */
.Tag{
  margin-top: 20rpx;
  font-size: 40rpx;
  margin-left: 15rpx;
}

/* 轮播图 */
.Swiper{
  margin-top: 30rpx;
  margin-left: 15rpx;
  width: 96%;
  border-radius: 30rpx;
  overflow: hidden;
}

.Swiper swiper{
  height:350rpx;
}

.Swiper navigator{
  width: 100%;
  height: auto;
}

.Swiper image{
  max-width: 100%; 
  max-height: 100%;
}

.module{
  display: flex;
  text-align: center;
  justify-content: space-between;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 30rpx;
}

.module .part{
  
}

.module .part .icon{
  margin-left: 35rpx;
  margin-right: 35rpx;
}

.module text{
  font-size: 30rpx;
  color: #5e5e5e;
}

.hottalk{
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 5%;
  padding: 20rpx;
}

.hottalk .title{
  font-size: 40rpx;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
  margin-left: 5rpx;
}

.hottalk .talklist{
}

.hottalk .talklist .listitem{
  display: flex;
  padding: 10rpx;
  border-bottom: 4rpx solid #f5f5f5;
  justify-content: space-between;
}

.listitem .right{
  flex:1;
}

.listitem image{
  border-radius: 10%;
}

.listitem .left{
  flex:4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-right: 10rpx;
}

.left .itemtitle{
  font-size: 35rpx;
  color: #3d3d3d;
}

.left .iteminfo{
  display: flex;
  justify-content: space-between;
}

.count, .date{
  font-size: 20rpx;
  color: #5e5e5e;
  margin-right: 20rpx;
}





