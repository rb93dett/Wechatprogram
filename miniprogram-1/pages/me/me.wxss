page{
  background-color: #f5f5f5;
}

.introduction{
  margin-bottom: 30rpx;
  padding:20rpx;
  display: flex;
  justify-content: space-between;
  background-color: #8aeab1;
}

.introduction .head{
  flex: 1;
  display: flex;
  justify-content: center;
  align-content: center;
  width:70%;
  border-radius: 50%;
  margin-right: 20rpx;
}

.introduction .next_arrow{
  flex:0.5;
  display: flex;
  width: 100%;
  height: 100%;
  margin-top: 35rpx;
  justify-content: center;
  align-content: center;
}

.user_info{
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.user_info .name{
  font-size: 50rpx;
  color: #000;
}

.user_info .tele{
  font-size: 30rpx;
  color: #6e6e6e;
}

.CenterList{
  padding:20rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
 border-bottom: 4rpx solid #f5f5f5;
}

.CenterList .ListIcon{
  flex: 1;
  display: flex;
  justify-content: center;
  align-content: center;
}

.CenterList .ListText{
  flex: 6;
  display: flex;
  font-size: 35rpx;
  justify-content: flex-start;
  align-content: center;
  margin-top: 6rpx;
}

.CenterList .ListBgImg{
  flex:0.5;
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-content: center;
  margin-top: 6rpx;
}

.logout{
  margin-top: 20rpx;
  padding: 15rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  font-size: 35rpx;
  color: red;
  background-color: #fff;
}
