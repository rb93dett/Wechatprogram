/* 轮播图 */
.Swiper{
  margin-top: 10rpx;
  margin-left: 15rpx;
  width: 96%;
  border-radius: 30rpx;
  overflow: hidden;
  background-color: #fff;
}

.Swiper swiper{
  height:350rpx;
}

.Swiper navigator{
  width: 100%;
  height: auto;
}

.Swiper image{
  max-width: 100%; 
  max-height: 100%;
}

