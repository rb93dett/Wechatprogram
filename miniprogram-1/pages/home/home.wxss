/* pages/home/home.wxss */
page{
  background-color: #f5f5f5;
}

.layer1{
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  border-top-left-radius:30rpx;
  border-top-right-radius:30rpx;
}

.layer1 .cloth{
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  background-color: #63b3f9;
  border-radius: 10rpx;
  margin-right: 12rpx;
  margin-left: 8rpx;
  padding: 10rpx;
}

.cloth .top{
  display: flex;
  justify-content: space-between;
  align-content: center;
  margin-bottom: 10rpx;
}

.cloth .title{
  font-size: 30rpx;
  color: #fff;
}

.cloth .button{
  display: flex;
  background-color: #fff;
  font-size: 20rpx;
  color: #63b3f9;
  border-radius: 20rpx;
  align-content: center;
  margin-right: 15rpx;
  height:40rpx;
  padding: 4rpx;
}

.cloth .button text{
  margin-top: 8rpx;
}

.cloth .bottom{
  color: #fff;
  font-size: 25rpx;
}

